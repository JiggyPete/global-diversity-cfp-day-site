<div class="homepage-continents">
  <% Continents.all.each do |key, continent| %>
    <% if continent["lead"].present? %>
    <br/>
      <h2 class="continent-title"><%= continent["name"] %> led by</h2>
      <%= link_to t(".cta"), continent_path(key), class: "ticket-button btn btn-warning" %>
      <br/>
      <br/>
      <%= render "shared/yml_volunteer", volunteer: continent["lead"] %>
    <% end %>
  <% end %>
</div>
