<h1>Stream Tickets</h1>
<div class="ticket-nav">
  <% Continents.all.each do |key, continent| %>
  <%= link_to continent["name"], continent["ticketing_url"], class: "continent-ticket btn btn-warning", target: "blank" %>
  <% end %>
</div>

<div id="intro" class="jumbotron">
  <h1><%= t(".jumbotron.title") %></h1>
  <% t(".jumbotron.sub-titles").each do |subtitle| %>
    <h2><%= subtitle %>
    </h2>
  <% end %>
  <%= link_to t(".jumbotron.cta.celebrate"), celebrate_url, class: "ticket-button btn btn-warning", target: "blank" %>
  <% link_to "Organise a workshop", organise_path, class: "ticket-button btn btn-warning" %>
</div>

  <% link_to "Open CFPs", cfps_path, class: "ticket-button btn btn-warning right-margin" %>
